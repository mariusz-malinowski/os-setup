#!/bin/sh

grep \
  --exclude-dir=.elixir_ls \
  --exclude-dir=.git \
  --exclude-dir=.idea \
  --exclude-dir=_build \
  --exclude-dir=assets \
  --exclude-dir=build \
  --exclude-dir=deps \
  --exclude-dir=dist \
  --exclude-dir=jest_* \
  --exclude-dir=logmon_ece-team-configs \
  --exclude-dir=logs \
  --exclude-dir=node_modules \
  --exclude-dir=out \
  --exclude-dir=public \
  --exclude-dir=scala \
  --exclude-dir=ssr \
  --exclude-dir=target \
  --color=auto -rniI ./ -e "$1"
